{
  "expo": {
    "name": "wms-mobile",
    "slug": "wms-mobile",
    "version": "1.0.0",
    "scheme": "wmsmobile",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seuprojeto.wmsmobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo precisa de acesso à câmera para tirar fotos dos itens e escanear códigos QR.",
        "NSPhotoLibraryUsageDescription": "Este aplicativo precisa de acesso à galeria de fotos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.seuprojeto.wmsmobile",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Este aplicativo precisa de acesso à câmera para tirar fotos e escanear códigos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Este aplicativo precisa de acesso à galeria de fotos.",
          "cameraPermission": "Este aplicativo precisa de acesso à câmera para tirar fotos."
        }
      ],
      "expo-router"
    ],
    "assetBundlePatterns": ["**/*"],
    "updates": {
      "fallbackToCacheTimeout": 0
    }
  }
}
